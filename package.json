{
  "name": "ldap-explorer",
  "displayName": "LDAP Explorer",
  "description": "LDAP Explorer for VS Code",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.70.0"
  },
  "repository": "https://github.com/fengtan/ldap-explorer",
  "publisher": "fengtan",
  "keywords": [
    "ldap",
    "ad",
    "active directory",
    "explorer"
  ],
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "activationEvents": [
    "onCommand:ldap-explorer.add-connection",
    "onCommand:ldap-explorer.edit-connection",
    "onCommand:ldap-explorer.delete-connection",
    "onCommand:ldap-explorer.activate-connection",
    "onCommand:ldap-explorer.deactivate-connection",
    "onCommand:ldap-explorer.refresh",
    "onCommand:ldap-explorer.copy-dn",
    "onCommand:ldap-explorer.show-attributes",
    "onView:ldap-explorer-view-connections",
    "onView:ldap-explorer-view-tree",
    "onView:ldap-explorer-view-search"
  ],
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "ldap-explorer-container",
          "title": "LDAP Explorer",
          "icon": "$(type-hierarchy-sub)"
        }
      ]
    },
    "views": {
      "ldap-explorer-container": [
        {
          "id": "ldap-explorer-view-connections",
          "name": "Connections"
        },
        {
          "id": "ldap-explorer-view-tree",
          "name": "Tree"
        },
        {
          "id": "ldap-explorer-view-search",
          "name": "Search",
          "type": "webview"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "ldap-explorer-view-connections",
        "contents": "No connection.\n[Add new connection](command:ldap-explorer.add-connection)"
      },
      {
        "view": "ldap-explorer-view-tree",
        "contents": "No active connection."
      }
    ],
    "commands": [
      {
        "command": "ldap-explorer.add-connection",
        "title": "Add new connection",
        "category": "LDAP Explorer",
        "icon": "$(add)"
      },
      {
        "command": "ldap-explorer.edit-connection",
        "title": "Edit connection",
        "category": "LDAP Explorer",
        "icon": "$(edit)"
      },
      {
        "command": "ldap-explorer.delete-connection",
        "title": "Delete connection",
        "category": "LDAP Explorer",
        "icon": "$(trash)"
      },
      {
        "command": "ldap-explorer.activate-connection",
        "title": "Set active connection",
        "category": "LDAP Explorer"
      },
      {
        "command": "ldap-explorer.deactivate-connection",
        "title": "Set no active connection",
        "category": "LDAP Explorer"
      },
      {
        "command": "ldap-explorer.refresh",
        "title": "Refresh",
        "category": "LDAP Explorer",
        "icon": "$(refresh)"
      },
      {
        "command": "ldap-explorer.show-attributes",
        "title": "Show attributes",
        "category": "LDAP Explorer"
      },
      {
        "command": "ldap-explorer.copy-dn",
        "title": "Copy DN",
        "category": "LDAP Explorer"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "ldap-explorer.copy-dn",
          "when": "false"
        }
      ],
      "view/title": [
        {
          "command": "ldap-explorer.add-connection",
          "when": "view == ldap-explorer-view-connections",
          "group": "navigation"
        },
        {
          "command": "ldap-explorer.refresh",
          "when": "view == ldap-explorer-view-connections || view == ldap-explorer-view-tree",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "ldap-explorer.edit-connection",
          "when": "view == ldap-explorer-view-connections"
        },
        {
          "command": "ldap-explorer.delete-connection",
          "when": "view == ldap-explorer-view-connections"
        },
        {
          "command": "ldap-explorer.copy-dn",
          "when": "view == ldap-explorer-view-tree"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "LDAP Explorer settings",
      "properties": {
        "ldap-explorer.connections": {
          "type": "array",
          "markdownDescription": "Connections list",
          "default": [],
          "items": {
            "type": "object",
            "required": [
              "name",
              "protocol",
              "host",
              "port",
              "basedn"
            ],
            "properties": {
              "name": {
                "type": "string",
                "description": "Name"
              },
              "protocol": {
                "type": "string",
                "description": "Protocol",
                "default": "ldap",
                "enum": [
                  "ldap",
                  "ldaps"
                ]
              },
              "host": {
                "type": "string",
                "description": "Host",
                "default": ""
              },
              "port": {
                "type": "string",
                "description": "Port",
                "default": ""
              },
              "binddn": {
                "type": "string",
                "description": "Bind DN",
                "default": ""
              },
              "bindpwd": {
                "type": "string",
                "description": "Bind password",
                "default": ""
              },
              "basedn": {
                "type": "string",
                "description": "Base DN",
                "default": ""
              },
              "timeout": {
                "type": "string",
                "description": "Timeout (milliseconds)",
                "default": "5000"
              }
            }
          }
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/ldapjs": "^2.2.3",
    "@types/mocha": "^9.1.1",
    "@types/node": "^16.11.54",
    "@types/vscode": "^1.70.0",
    "@typescript-eslint/eslint-plugin": "^5.34.0",
    "@typescript-eslint/parser": "^5.34.0",
    "@vscode/test-electron": "^2.1.5",
    "eslint": "^8.20.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "@vscode/webview-ui-toolkit": "^1.0.1",
    "ldapjs": "^2.3.3"
  }
}
