{
  "name": "ldap-browser",
  "displayName": "LDAP browser",
  "description": "LDAP browser for VS Code",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.70.0"
  },
  "repository": "https://github.com/fengtan/ldap-browser",
  "publisher": "fengtan",
  "keywords": [
    "ldap",
    "ad",
    "active directory"
  ],
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "activationEvents": [
    "onCommand:ldap-browser.add-connection",
    "onView:ldap-browser-view"
  ],
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "ldap-browser-container",
          "title": "LDAP browser",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "ldap-browser-container": [
        {
          "id": "ldap-browser-view",
          "name": "LDAP browser"
        }
      ]
    },
    "commands": [
      {
        "command": "ldap-browser.add-connection",
        "title": "Add new connection",
        "category": "LDAP browser"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.70.0",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "eslint": "^8.20.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "typescript": "^4.7.4",
    "@vscode/test-electron": "^2.1.5"
  }
}
